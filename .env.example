# Server
PORT=5000
CLIENT_ORIGIN=http://localhost:3000

# Database
# Use either a local MongoDB or a cloud connection string
# Example Atlas SRV: mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/kit-librarian?retryWrites=true&w=majority
MONGODB_URI=

# Auth (update to strong random strings >= 32 chars)
JWT_ACCESS_SECRET=change-me-access-secret-please
JWT_ACCESS_SECRET_CURRENT=
JWT_ACCESS_SECRET_PREV=
JWT_REFRESH_SECRET=change-me-refresh-secret-please
JWT_REFRESH_SECRET_CURRENT=
JWT_REFRESH_SECRET_PREV=
TOKEN_ACCESS_TTL=15m
TOKEN_REFRESH_TTL=7d

# Data retention and analytics
